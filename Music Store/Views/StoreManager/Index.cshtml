@using Music_Store.ViewModels;
@model IEnumerable<VmAlbumManager>

@{
    ViewBag.Title = "Index";
    int no = 1;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "StoreManager", null, new { @class = "" })
</p>
<table class="table shadow mb-5">
    <thead class="text-center table-warning align-middle">
        <tr>
            <th>No</th>
            <th>
                @Html.DisplayNameFor(model => model.Genre.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Title)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.AlbumPrice)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (VmAlbumManager item in Model) {
        <tr class="align-middle">
            <td class="text-center">@no</td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td class="text-wrap">
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td class="text-wrap">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.AlbumPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "StoreManager", new { id = item.AlbumId }, new { @class = "" }) |
                @*@Html.ActionLink("Details", "Details", "StoreManager", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", "StoreManager", new { id = item.AlbumId }, new { @class = "" })
            </td>
        </tr>

        no++;
    }
    </tbody>
</table>
